<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--- favicon URL -->
    <link rel="shortcut icon" href="https://i.imgur.com/fB7Bxzc.png" type="image/png">
    <!--Bootstrap CDN-->
    <!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"> -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>

    <!--Styles-->
    <link rel='stylesheet' type='text/css' href='styles/style.css' />


    <title>Things I have to do</title>
</head>

<body>
    <section class="bg-dark">
        <div class="min-h-screen py-12 text-white layout">

            <div class="flex flex-col items-center mb-8">
                <h1 class="text-2xl md:text-4xl">Things I have to do</h1>
                <p class="mt-3  text-gray-300">By
                    <!-- --><a class="undefined  inline-flex items-center font-bold hover:text-primary-400" target="_blank" rel="noopener noreferrer" href="https://ialassaf.sa">Ibrahim Alassaf</a></p>

            </div>

            <div>

                <!--Add a task-->
                <form action="/create" method="POST" name="Title" class="flex flex-col max-w-lg mx-auto space-y-2">
                    <label for="query" class="text-sm font-medium">Task title: </label>
                    <input type="text" name="Title" placeholder="Add a task" class="border-gray-600 rounded-md bg-dark focus:ring-primary-400 focus:border-primary-400 col-5 mt-4">
                    <div class="flex flex-col items-center">
                        <button type="submit " class=" p-1 rounded-full focus:outline-none hover:text-primary-400 "><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square-fill" viewBox="0 0 16 16">
                            <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm6.5 4.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3a.5.5 0 0 1 1 0z"/>
                          </svg>
                          
                          </button>

                    </div>
                </form>
            </div>

            <!--List of tasks-->
            <% if (todotasks.length > 0) { %>
                <ul class="max-w-lg mx-auto mt-4 divide-y">
                    <% todotasks.forEach(tasks => { %>
                        <li class="flex items-center w-full py-3 ">
                            <div class="w-full py-3 text-base font-medium">
                                <span class="font-bold text-primary-400">-</span>
                                <%= tasks.Title %>
                            </div>
                            <div class="flex">
                                <!--Update a task-->
                                <a class="p-1 rounded-full focus:outline-none focus:ring focus:ring-primary-400 hover:text-primary-400" href="update/<%=tasks._id%>"> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                    <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
                                  </svg>

                                </a>
                                <!--Delete task-->
                                <a href="/delete/<%=tasks._id %>?_method=delete" class="p-1 rounded-full focus:outline-none focus:ring focus:ring-primary-400 hover:text-primary-400" style="text-decoration:none ;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                        <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                                      </svg>

                                </a>
                            </div>
                        </li>
                        <%  }) %>

                </ul>

                <% } else { %>
                    <h3 class="mt-4 text-center">Try to add a task</h3>

                    <% } %>











        </div>
    </section>

</body>

</html>